        Title="The Teleporter" Height="700" Width="1150" Loaded="Window_Loaded" WindowStyle="ThreeDBorderWindow">
    <Grid Background="#5BB899">
        <Canvas Height="600" HorizontalAlignment="Left" Margin="193,12,12,0" Name="canvas" VerticalAlignment="Top" Width="900" Background="White" ClipToBounds="True">

        </Canvas>
